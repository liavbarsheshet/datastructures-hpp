# Application Information
NAME = ds-hpp
VERSION = 1.0.0

# Enviroment
CFLAGS = -Wall -std=c++20
OBJS = list.o iterator.o main.o
CC = g++
EXEC =

ifeq ($(OS),Windows_NT)
	EXEC += .exe
endif

# Path Alias
RELEASE_PATH = release/$(VERSION)
BUILD_PATH = debug/$(VERSION)

# Array
array.o: array/array.hpp
	$(CC) $(CFLAGS) -c $^ -o ./objects/$@

# List
list.o: ./list/list.hpp
	$(CC) $(CFLAGS) -c $^ -o ./objects/$@

# Iterator
iterator.o: ./iterator/iterator.hpp
	$(CC) $(CFLAGS) -c $^ -o ./objects/$@

# Util
exceptions.o: ./util/exceptions.hpp
	$(CC) $(CFLAGS) -c $^ -o ./objects/$@

# Main
main.o: ./main.cpp
	$(CC) $(CFLAGS) -c $^ -o ./objects/main.o


compile: clean array.o




clean:
	rm -f ./objects/*.o